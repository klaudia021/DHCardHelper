@page
@model DHCardHelper.Pages.Cards.Domains.IndexModel

<div class="container mt-3 mb-3">
    <div class="card border-0 my-2">
        <div class="card-header border-0 bg-white m-lg-0">
            <h1>Domain Cards</h1>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-12 col-sm-4 col-lg-3">
                    <label>Character</label>
                    <select asp-items="Model.CardToSheetViewModel.CharacterSheetList" id="character-sheet-list" class="form-select"></select>
                </div>
            </div>
            <div class="row g-3">
                @foreach (var card in Model.CardToSheetViewModel.CardList.OrderBy(c => c.Title))
                {
                    var color = !string.IsNullOrEmpty(card.Domain.Color) ? card.Domain.Color : "bg-secondary";
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card h-100" id="card-@card.Id">
                            <div class="card-header" style="background-color:@color; color:white;">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title">@card.Title</h5>
                                    </div>
                                    <div class="col-2">
                                        <a href="javascript:void(0)" id="add-to-sheet-icon" data-cardid="@card.Id" class="card-link"><i class="bi bi-plus-circle"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="row">
                                    <div class="col-6">
                                        <h5 class="card-subtitle mb-2" style="color:@color;">@card.Domain.Name</h5>
                                    </div>
                                    <div class="col-3 text-end">
                                        <h6>@card.Level</h6>
                                    </div>
                                    <div class="col-3 text-end">
                                        <h6>@card.RecallCost<i class="bi bi-lightning-charge-fill"></i></h6>
                                    </div>
                                </div>
                                <div class="row">
                                    <h8 class="card-subtitle mb-2 text-body-secondary">@card.DomainCardType.Name</h8>
                                    <p class="card-text">@Html.Raw(@card.Feature)</p>
                                </div>
                                <div class="row mt-auto align-text-bottom">
                                    @if (User.IsInRole(RoleNames.Admin) || User.IsInRole(RoleNames.GameMaster))
                                    {
                                        <div class="col-6">
                                            <a asp-area="GameMaster" asp-page="/Cards/Domain/Edit" asp-route-id="@card.Id" class="card-link"><i class="bi bi-pencil-square"></i></a>
                                        </div>
                                        <div class="col-6 text-end">
                                            <form id="hiddenForm" method="post">
                                                @Html.AntiForgeryToken()
                                            </form>
                                            <button id="delete-icon" type="button" class="btn btn-link p-0 border-0" data-id="@card.Id" data-type="Domain">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/delete.js"></script>
    <script src="~/js/card-sheet.js"></script>
}