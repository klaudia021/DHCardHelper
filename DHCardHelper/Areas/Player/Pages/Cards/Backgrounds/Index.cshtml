@page
@model DHCardHelper.Pages.Cards.Backgrounds.IndexModel
@{
}

<div class="container mt-3 mb-3">
    <div class="card border-0 my-2">
        <div class="card-header border-0 bg-white m-lg-0">
            <h1>Background Cards</h1>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @foreach (var card in Model.BackgroundCards.OrderBy(c => c.Title))
                {
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title">@card.Title</h5>
                                    </div>
                                    <div class="col-2">
                                        <a href="#" class="card-link"><i class="bi bi-plus-circle"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="row">
                                    <div class="col-12">
                                        <h5 class="card-subtitle mb-2 text-body-secondary">@card.BackgroundType.Name</h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <p class="mb-2 text-body-secondary fst-italic" style="font-size: 1rem">@card.Desciption</p>
                                    <p class="card-text">@Html.Raw(@card.Feature)</p>
                                </div>
                                <div class="row mt-auto align-text-bottom">
                                    <div class="col-6">
                                        <a asp-area="GameMaster" asp-page="/Cards/Background/Edit" asp-route-id="@card.Id" class="card-link"><i class="bi bi-pencil-square"></i></a>
                                    </div>
                                    <div class="col-6 text-end">
                                        <form id="hiddenForm" method="post">
                                            @Html.AntiForgeryToken()
                                        </form>
                                        <button id="delete-icon" type="button" class="btn btn-link p-0 border-0" data-id="@card.Id" data-type="Background">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/delete.js"></script>
}